@Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue, new { @class = "text-box single-line", type = "datetime", id=string.Format("{0}",ViewData.TemplateInfo.HtmlFieldPrefix) })

<script type="text/javascript">
    window.onload =
    $(function () {
        $("#@ViewData.TemplateInfo.HtmlFieldPrefix").datetimepicker({
            language: 'en',
            pick12HourFormat: true
        });
    });
</script>